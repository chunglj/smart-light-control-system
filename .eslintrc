{
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [ 1, 4 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 1, "windows" ],
        "semi": [ 1, "always" ],
        "no-console": "off",
        "no-unused-vars": [1, { "vars": "all", "args": "after-used" }]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "globals": {
        "window": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint"
}
